---
import { DailyFooter } from "../components/DailyFooter";
import { SmolDocumentStyle } from "../components/SmolDocumentStyle";
import { Timeline } from "../components/timeline/Timeline";
import Root from "../layouts/root.astro";
---

<Root title="Programming and me: a history">
  <h1>Programming and me: a history</h1>
  <br />
  <div>
    <Timeline />
  </div>
  <br />
  <DailyFooter day="history" />
  <SmolDocumentStyle />
  <style is:inline>
    body {
      background-color: #2c3e50;
    }
    *,
    a {
      color: white;
    }
  </style>
  <Fragment slot="head">
    <link rel="octo:octothorpes" href="history" />
    <link
      rel="preload"
      as="fetch"
      href="https://octothorp.es/?uri=https://mitchellbusby.github.io/wwo-24/history"
    />
    <link rel="octo:octothorpes" href="weirdweboctober" />
    <meta
      name="description"
      content="A short history of me learning to program"
    />
  </Fragment>
</Root>
